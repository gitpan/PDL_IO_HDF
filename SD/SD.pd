#fonction de convertion d'une chaine de byte en chaine de char
sub Byte2Char
  {
    my ($strB) = @_;
    my $strC;
#    print "n_elem : ".$strB->dim."\n";
    for(my $i=0; $i<$strB->nelem; $i++)
      {
